{
  "version": 2,
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/wechat",
      "dest": "/api/wechat.py"
    },
    {
      "src": "/",
      "dest": "/api/wechat.py"
    },
    {
      "src": "/health",
      "dest": "/api/wechat.py"
    }
  ]
}